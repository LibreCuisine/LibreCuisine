<html lang="de">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>{{ .Name }} | LibreCuisine</title>
</head>
<body>
	<h1>{{ .Name }}</h1>
	<p>{{ .Desc }}</p>
	<ul>
		{{ range .Ingredients }}
		<li>{{ .Amount }} {{ .Unit }} {{ .Name }}</li>
		{{ end }}
	</ul>
	<ul>
		{{ range .Steps }}
		<li>{{ . }}</li>
		{{ end }}
	</ul>
</body>
</html>
